<div class="row">
	<div class="col-lg-3">
		<img src="//www.sylvain-lader.fr/wp-content/uploads/2012/07/placeholder.jpg" style="width:100px;height:100px;" />
		<hr />
		<h3><%= current_user.name %></h3>
		<h3><%= current_user.id %></h3>
	</div>
	<div class="col-lg-9">
		<%= form_for(@current_user, html: {:edit => :update, method: "patch", :class: "bs-example form-horizontal"}) do %>
			<fieldset>
				<legend>Update Your Information</legend>
				<div class="form-group">
					<%= label_tag(:name, "Name") %>
					<div class="col-lg-10">
						<%= text_field_tag(:name, current_user.name) %>
					</div>
				</div>
				<div class="form-group">
					<%= label_tag(:email, "Email") %>
					<div class="col-lg-10">
						<%= text_field_tag(:email, current_user.email) %>
					</div>
				</div>
				<div class="form-group">
					<%= label_tag(:newsletter, "Sign Up For Newsletter?") %>
					<div class="col-lg-10">
						<%= check_box_tag(:newsletter, current_user.newsletter) %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
						<button class="btn btn-default">Cancel</button> 
						<button type="submit" class="btn btn-primary">Submit</button> 
					</div>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>