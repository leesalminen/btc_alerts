<div class="row">
	<div class="span12">
		<h1>This is what we know about Mt. Gox</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Rate</th>
					<th>Timestamp</th>
				</tr>
			</thead>
			<tbody>
				<% @prices.each do |price|%>
				   	<tr>
				      <td><%= price.id %></td>     
				      <td><%= number_to_currency(price.rate) %></td>
				      <td><%= price.created_at %></td>
				   </tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

